FROM python:3.8.8

ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

RUN mkedir /code
WORKDIR /code

RUN apt-get clean && apt-get install vim -y && apt-get install default-libmysqlclient-dev -y


ADD requirements.txt /code/
RUN pip install --upgrade pip && pip install -r requirements.txt

ADD . /code/

